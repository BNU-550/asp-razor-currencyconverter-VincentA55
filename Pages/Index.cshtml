@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">VincentA55 CO550 Email Register</h1>

    <div>
        <a class="nav-link" asp-area="" asp-page="/CurrencyConverter">CurrencyConverter</a>
    </div>

    <form method="post" class="mx-auto">
        <div class="form-group">
            <p>
                <label for="validationDefault01">Name</label>
                <input type="text" class="form-control" id="validationDefault01" placeholder="Name" required>
                <input asp-for="FullName" type="text" name="name">
            </p>
            <p>
                <label for="email">Email</label>
                <input type="email">
            </p>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <p class="alert-success"> @ViewData["Message"]</p>
</div>